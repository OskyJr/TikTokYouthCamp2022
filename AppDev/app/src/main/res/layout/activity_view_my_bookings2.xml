<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ViewMyBookingsActivity2"
    android:fillViewport="true"
    android:background="@drawable/catstare">>


    <FrameLayout
        android:id="@+id/framelayout_viewmybookings"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/linearLayout_myappointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_isthereappointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Bookings"
                android:textSize="20sp"/>

<!--            <Space-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="10dp"/>-->

            <ListView
                android:id="@+id/listview_myappointmentpending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"/>



        </LinearLayout>


    </FrameLayout>

</ScrollView>