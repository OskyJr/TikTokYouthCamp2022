<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CatsActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                tools:srcCompat="@drawable/cat_cookie" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_catname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name: Cookie"
                    android:textColor="@color/black"
                    android:textSize="26dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_catage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="age: 5 year old"
                    android:textColor="@color/black"
                    android:textSize="26dp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_catbreed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="breed: shorthair"
                    android:textColor="@color/black"
                    android:textSize="26dp"
                    android:textStyle="normal"/>


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>